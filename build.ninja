cflags = -std=c17 -O0 -Wall -Werror -g -DDEBUG -I./src/include/
cc = clang
rule cc
  command = $cc -c $in -o $out $cflags

rule link
  command = $cc $in -o $out 

build obj/console.o : cc src/console.c
build obj/cstr.o : cc src/cstr.c
build obj/debug.o : cc src/debug.c
build obj/strvec.o : cc src/strvec.c 
build obj/lexer.o : cc src/lexer.c
build obj/number.o : cc src/number.c
build obj/point.o : cc src/point.c
build obj/parser.o : cc src/parser.c
build obj/compiler.o : cc src/compiler.c
build obj/ast.o : cc src/ast.c
build obj/tokens.o : cc src/tokens.c

# build main.c
build obj/main.o : cc src/main.c 
# build test.c
build obj/test.o : cc src/test.c

build mathc: link obj/parser.o obj/tokens.o obj/ast.o obj/compiler.o obj/point.o obj/number.o obj/lexer.o obj/console.o obj/cstr.o obj/debug.o obj/strvec.o obj/main.o
build test: link  obj/parser.o obj/tokens.o obj/ast.o obj/compiler.o obj/point.o obj/number.o obj/lexer.o obj/console.o obj/cstr.o obj/debug.o obj/strvec.o obj/test.o
